{
  "tasks": {
    "cli": "deno run --allow-run --allow-read --allow-net --allow-env cli.ts",
    "serve": "deno run --allow-run --allow-read --allow-net --allow-env server.ts",
    "dev": "deno run --watch --allow-run --allow-read --allow-net --allow-env server.ts",
    "check": "deno check cli.ts server.ts lib/*.ts lib/rules/*.ts",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "compilerOptions": {
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100
  }
}
